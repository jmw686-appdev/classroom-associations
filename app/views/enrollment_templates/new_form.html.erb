<!-- Validation failure messages -->
<% if @enrollment.present? %>
  <% if @enrollment.errors.any? %>
    <% @enrollment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new enrollment
</h1>

<hr>

<form action="/create_enrollment" method="post">
  <!-- Label and input for course_id -->
  <div class="form-group">
    <label for="course_id">
      Course
    </label>

    <input type="text" id="course_id" name="course_id" class="form-control" value="<%= @enrollment.try(:course_id) %>">
  </div>

  <!-- Label and input for student_id -->
  <div class="form-group">
    <label for="student_id">
      Student
    </label>

    <input type="text" id="student_id" name="student_id" class="form-control" value="<%= @enrollment.try(:student_id) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create enrollment
  </button>
</form>

<hr>

<a href="/enrollments">
  Go back
</a>
